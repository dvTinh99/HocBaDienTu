	public static void showHocSinh(JTable table) {
		DefaultTableModel df = (DefaultTableModel) table.getModel();
		List<HocSinh> list = new ArrayList<HocSinh>();
		list = GiaoVienDao.getHocSinh();
		for(HocSinh hs : list) {
			String[] data = {
					String.valueOf(hs.getMa_hs()),
					hs.getHo(),
					hs.getTen(),
					hs.getGioiTinh(),
					hs.getNgaySinh(),
					hs.getDiaChi(),
					hs.getSdt(),
					hs.getCMND()
					
			};
			df.addRow(data);
		}
		table.setModel(df);
	}
